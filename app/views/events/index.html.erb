<h1>Webhook Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
	  <th>POST body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
		<td><%= event.created_at %></td>
        <td><%= event.body %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

